<div id="registration-type-<%= model.id %>" class="conference__registration" data-conference-registration>
  <div class="conference__registration-text">
    <span class="h5 text-secondary"><%= title %></span>
    <span><%= icon "information-line", class: "text-gray fill-current" %><%= description %></span>
  </div>
  <div class="conference__registration-button">
    <span><%= price %></span>
    <%= render :join_conference %>
  </div>
</div>

<% add_decidim_meta_tags(title: t("assemblies.index.title", scope: "decidim")) %>

<%
edit_link(
  decidim_admin_assemblies.assemblies_path,
  :read,
  :assembly_list
)
%>

<% content_for :css_content do %>
  <%= stylesheet_pack_tag "decidim_assemblies", media: "all" %>
<% end %>

<% content_for :js_content do %>
  <%= javascript_pack_tag "decidim_assemblies" %>
<% end %>

<% content_for :aside do %>
  <h1 class="h3 md:h1 decorator"><%= t("decidim.menu.assemblies") %></h1>

  <%#= render partial: "filters" %>
  <%= render partial: "decidim/shared/participatory_space_filters/show" %>
<% end %>

<%= render layout:"layouts/decidim/shared/layout_two_col" do %>

  <%= redesigned_participatory_space_floating_help %>

  <% if promoted_assemblies.any? %>
    <section id="highlighted-assemblies" class="card__highlight-container">
      <h2 class="h5 md:h3 decorator"><%= t("assemblies.index.promoted_assemblies", scope: "layouts.decidim") %></h2>

      <%= render partial: "promoted_assembly", collection: promoted_assemblies, as: :promoted_assembly %>
    </section>
  <% end %>

  <section id="parent-assemblies" class="card__grid-container">
    <h2 class="h5 md:h3 decorator"><%= t("assemblies.order_by_assemblies.assemblies", scope: "layouts.decidim", count: collection.total_count) %></h2>

    <div class="card__grid-grid">
      <%= render(collection) %>
    </div>

    <%= decidim_paginate collection %>
  </section>
<% end %>

<% data = !disable_tooltip && has_tooltip? ? { tooltip: render(:profile_minicard).html_safe } : nil %>
<%= content_tag :span, class: "author__avatar-container", data: do %>
  <% if profile_path? %>
    <%= link_to profile_path do %>
      <%= render :avatar_image %>
    <% end %>
  <% else %>
    <%= render :avatar_image %>
  <% end %>
<% end %>

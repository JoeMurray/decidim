<% if @forced_closed_initiatives %>
  <div class="callout warning mt-4">
    <%= t ".closed_initiatives_warning" %>
  </div>
<% elsif initiatives.blank? %>
  <div class="callout warning mt-4">
    <%= t ".no_initiatives_warning" %>
  </div>
<% end %>

<%= render partial: "index_header" %>

<div class="collection-sort-controls mb-8 mt-2">
  <%= order_selector available_orders, i18n_scope: "decidim.initiatives.initiatives.orders" %>
</div>

<div class="card__grid-container">
  <div class="card__grid-grid">
    <%= render initiatives %>
  </div>
</div>

<%= decidim_paginate initiatives %>
<%= render partial: "decidim/shared/results_per_page" %>

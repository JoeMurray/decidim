<% content_for :back_link do %>
  <%= link_to :back do %>
    <%= icon "chevron-left", class: "icon--small", role: "img", "aria-hidden": true %>
    <%= t(".back") %>
  <% end %>
<% end %>

<% announcement_body = capture do %>
  <%= t("compare_help", scope: "decidim.initiatives.create_initiative.show_similar_initiatives") %>
  <%= link_to t(".more_information"), decidim.page_path("initiatives"), target: "_blank" %>
<% end %>

<%= cell("decidim/announcement", { body: announcement_body }, callout_class: "secondary") %>

<div class="row small-up-1 medium-up-2 card-grid">
  <%= render similar_initiatives %>
</div>

<div class="row">
  <div class="columns mediumlarge-4 small-12 mediumlarge-push-4">
    <%= link_to t(".continue"), next_wizard_path, class: "button expanded" %>
  </div>
</div>
